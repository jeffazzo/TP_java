@RestController
public class BookController {
	
	@Autowired
	BookRepository bookrepository;
	
	// Affiche les livres disponibles
	@GetMapping(value = "/users/{userId}/books/status/{status}")
	public List<Book> getBookWhithSatus(@PathVariable("userId") Integer userId,
										@PathVariable("status") String statusStr){
		List<Book> listBook = bookrepository.findByStatusAndUserIdNotAndDeletedFalse(statusStr, userId);
		return listBook;
	}
	
