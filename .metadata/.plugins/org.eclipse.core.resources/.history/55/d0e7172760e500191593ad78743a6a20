package com.work.sharebook.loan;

import java.util.List;

import org.hibernate.query.criteria.internal.CriteriaUpdateImpl;
import org.springframework.data.repository.CrudRepository;
import org.springframework.stereotype.Repository;

@Repository
public interface LoanRepository extends CrudRepository{
	
	List<Loan> findByBorroverId(Integer borrowerId);
	
	List<Loan> findByLenderId(Integer lenderId);
	
	List<Loan> findByBookId(Integer bookId);
}
